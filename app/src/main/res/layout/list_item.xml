<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_text_bg">

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginBottom="3dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/idTeam1Img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/logo1"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/idTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hbjasjka"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="2.6"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idMatchNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="match no"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/idVirsus_listItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বনাম"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/idStadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stadium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginBottom="3dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/idTeam2Img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/logo1"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/idTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hbjasjka"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>